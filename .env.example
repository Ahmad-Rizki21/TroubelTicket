# Database Configuration
DATABASE_URL=mysql+pymysql://tickets_user:stronguserpassword123@localhost:3306/tickets_db
MYSQL_ROOT_PASSWORD=strongrootpassword123
MYSQL_DATABASE=tickets_db
MYSQL_USER=tickets_user
MYSQL_PASSWORD=stronguserpassword123

# JWT Configuration
SECRET_KEY=your-super-secret-key-here-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://yourdomain.com"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "yourdomain.com"]

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
SESSION_TIMEOUT_MINUTES=120

# File Upload Security
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "pdf", "doc", "docx", "txt"]
UPLOAD_DIR=static/uploads
SCAN_UPLOADS_FOR_VIRUSES=true

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TEMPLATES_DIR=templates/email

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://:strongredispassword123@localhost:6379/0
CACHE_EXPIRE_SECONDS=3600
SESSION_PREFIX=tickets_session:

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
SECURITY_LOG_FILE=logs/security.log
AUDIT_LOG_FILE=logs/audit.log
MAX_LOG_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
METRICS_PORT=9090

# API Configuration
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Development/Production
ENVIRONMENT=development
DEBUG=false
TESTING=false

# Security Headers
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_FRAME_DENY=true
X_FRAME_OPTIONS=DENY